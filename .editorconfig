# Free & Fair Coding Standard - EditorConfig
# https://github.com/FreeAndFair/CodingStandards

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

[*.{xml,json,yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
